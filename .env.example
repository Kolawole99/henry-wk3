# OpenRouter API Configuration
OPENROUTER_API_KEY=sk-your-openai-api-key-here

# Langfuse Configuration
# Get your keys from https://cloud.langfuse.com
LANGFUSE_SECRET_KEY=sk-lf-your-secret-key-here
LANGFUSE_PUBLIC_KEY=pk-lf-your-public-key-here
LANGFUSE_HOST=https://cloud.langfuse.com

# Model Configuration (Optional - defaults provided)
# Orchestrator: Routes queries to correct department
ORCHESTRATOR_MODEL=gpt-3.5-turbo

# Agent: Answers queries using RAG
AGENT_MODEL=gpt-4o-mini

# Evaluator: Scores response quality
EVALUATOR_MODEL=gpt-3.5-turbo

# Embedding: Converts text to vectors
EMBEDDING_MODEL=text-embedding-3-small

# RAG Configuration (Optional - defaults provided)
CHUNK_SIZE=1000
CHUNK_OVERLAP=100
RETRIEVAL_K=5

# Vector Store Configuration (Optional - defaults provided)
# Options: memory, chroma, hnswlib
VECTOR_STORE_TYPE=memory
VECTOR_STORE_PATH=data/vector_stores

# Observability Configuration (Optional - defaults provided)
ENABLE_TRACING=true
ENABLE_EVALUATION=true
